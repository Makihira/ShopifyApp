<h1 class="display-4 text-primary">Sneakers#edit</h1>
<p>※「<%= @sneaker.name %>」の内容を編集します。</p>
<%= form_for(@sneaker, url:{controller:'sneakers', action:'edit', id:@sneaker.id}) do |form| %>
    <div class="form-group">
        <label for="name">Name</label>
        <%= form.text_field :name, {class:"form-control"} %>
    </div>
    <div class="form-group">
        <label for="maker">Maker</label>
        <%= form.text_field :maker, {class:"form-control"} %>
    </div>
    <div class="form-group">
        <label for="color">Color</label>
        <%= form.text_field :color, {class:"form-control"} %>
    </div>
    <div class="form-group">
        <label for="price">Price</label>
        <%= form.text_field :price, {class:"form-control"} %>
    </div>
    <div class="form-group">
        <label for="memo">Memo</label>
        <%= form.text_area :memo, {rows:5, class:"form-control"} %>
    </div>
    <%= form.submit "更新" %>
<% end %>
<p class="link"><a href="/sneakers">&lt;&lt;  ※トップページに戻る</a></p>
